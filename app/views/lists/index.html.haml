%h1= "#{@user.username}'s lists"

%table.table
  %tr
    %th Name
    %th User
    %th Permissions
    %th
    %th
    %th

  - @lists.each do |list|
    %tr
      %td= list.name
      %td= list.user_id
      %td= list.permissions
      %td= link_to 'Show', list, class: 'btn' 
      %td= link_to 'Edit', edit_list_path(list), class: 'btn' 
      %td= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn'

%br

= link_to 'New List', new_list_path, class: 'btn'
